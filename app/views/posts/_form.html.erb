<%= form_with model: post do |form| %>
  <div>
    <%= form.hidden_field :member_id, value: current_member.id %>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
    <% post.errors.full_messages.each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
